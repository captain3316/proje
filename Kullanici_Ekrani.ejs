    <!-- Menü Verileri -->
    <script>
        function silUrun(urunId) {

            if (confirm("Bu ürünü silmek istediğinizden emin misiniz?")) {

                fetch(`/silUrun/${urunId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                    .then(response => {
                        if (response.ok) {
                            return response.json();
                        } else {
                            throw new Error('Silme işlemi başarısız oldu');
                        }
                    })
                    .then(data => {
                        if (data.success) {
                            alert("Ürün başarıyla silindi!");

                            location.reload();
                        } else {
                            alert("Bir hata oluştu.");
                        }
                    })
                    .catch(error => {
                        console.log(error)
                        alert("Bir hata oluştu.");
                    });
            }
        }

        let formListenerAdded = false;


        function urunEkle(kategoriId) {
            const urunFormu = document.getElementById('urunFormu');
            const urunEkleButonu = document.getElementById('urunEkleButonu');
            let formListenerAdded = false;

            if (urunFormu.style.display == 'none' ) {
                urunFormu.style.display = 'block';
                urunEkleButonu.textContent = 'Formu Gizle';
            } else {
                urunFormu.style.display = 'none';
                urunEkleButonu.textContent = 'Ürün Ekle';
            }


            if (!formListenerAdded) {
                document.getElementById('veriFormu').addEventListener('submit', function (event) {
                    


                    const isim = document.getElementById('isim').value;
                    const fiyat = document.getElementById('fiyat').value;
                    const maliyet = document.getElementById('maliyet').value;



                    fetch('/urunEkle', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            isim: isim,
                            fiyat: fiyat,
                            maliyet: maliyet,
                            kategoriId: kategoriId
                        })
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Sunucu yanıtı başarısız');
                            }
                            return response.json();
                        })
                        .then(data => {


                            alert("Ürün başarıyla eklendi");
                            urunFormu.style.display = 'none';
                            urunEkleButonu.textContent = 'Ürün Ekle';
                            document.getElementById('veriFormu').reset();
                            location.reload();


                        })
                        .catch(error => {
                            console.error('Hata:', error);
                            alert("Ürün eklendi.");
                        });
                });

                formListenerAdded = true;
            }

        }


    </script>
